@{
    ViewData["Title"] = "Your Suggested Plan";
    var workoutPlan = ViewBag.WorkoutPlan ?? "No workout plan available.";
    var mealPlan = ViewBag.MealPlan ?? "No meal plan available.";
    var notes = ViewBag.Notes ?? "No notes available.";
    var errorMessage = ViewBag.ErrorMessage as string;
}

<div class="plan-container">
    <h3 class="text-center">Your Suggested Workout and Meal Plan</h3>

    <div class="plan-section">
        <h4>Workout Plan</h4>
        <pre>@workoutPlan</pre>
    </div>

    <div class="plan-section">
        <h4>Meal Plan</h4>
        <pre>@mealPlan</pre>
    </div>

    <div class="plan-section">
        <h4>Notes</h4>
        <pre>@notes</pre>
    </div>

    <div class="options">
        <form method="post" action="@Url.Action("GenerateWorkout", "Fitness")">
            <button type="submit" class="btn btn-primary">Generate New Plan</button>
        </form>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            <p>Error: @errorMessage</p>
        </div>
    }
</div>

<style>
    .plan-container {
        max-width: 700px;
        margin: 40px auto;
        padding: 30px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h3 {
        color: #333;
        margin-bottom: 20px;
    }

    .plan-section {
        margin-bottom: 30px;
        padding: 15px;
        border: 1px solid #eee;
        border-radius: 8px;
        background-color: #f7f7f7;
        transition: background-color 0.3s ease;
    }

        .plan-section:hover {
            background-color: #eaeaea;
        }

    h4 {
        color: #007BFF;
        font-size: 20px;
        margin-bottom: 10px;
    }

    pre {
        white-space: pre-wrap;
        font-family: inherit;
        font-size: 16px;
        color: #666;
    }

    .options {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .btn {
        flex: 1;
        margin: 0 5px;
        padding: 10px;
        font-size: 16px;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007BFF;
        color: #ffffff;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #ffffff;
        border: none;
    }

    .btn:hover {
        opacity: 0.9;
    }
</style>
