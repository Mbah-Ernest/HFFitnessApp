@model HFFitnessApp.Models.HealthData

@{
    ViewData["Title"] = "Health Data Input";
}

<div class="health-data-input-container">
    <h3 class="text-center">Health Data Input</h3>

    <form asp-action="SaveHealthData" method="post">
        <div class="form-group">
            <label>Age</label>
            <input asp-for="Age" class="form-control" min="1" max="120" required />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Height (cm)</label>
            <input asp-for="Height" class="form-control" min="100" max="250" required />
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Weight (kg)</label>
            <input asp-for="Weight" class="form-control" min="30" max="300" required />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Gender</label><br />
            <input asp-for="Gender" type="radio" value="Male" required /> Male
            <input asp-for="Gender" type="radio" value="Female" required /> Female
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Fitness Goal</label>
            <select asp-for="FitnessGoal" class="form-control" required>
                <option value="">-- Select Goal --</option>
                <option value="Weight Loss">Weight Loss</option>
                <option value="Muscle Gain">Muscle Gain</option>
                <option value="Maintenance">Maintenance</option>
                <option value="Improved Endurance">Improved Endurance</option>
            </select>
            <span asp-validation-for="FitnessGoal" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Dietary Preferences</label>
            <select asp-for="DietaryPreferences" class="form-control" required>
                <option value="">-- Select Dietary Preference --</option>
                <option value="Vegetarian">Anything</option>
                <option value="Vegan">Vegan</option>
                <option value="Keto">Keto</option>
                <option value="Paleo">Paleo</option>
                <option value="None">None</option>
            </select>
            <span asp-validation-for="DietaryPreferences" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Food Preferences</label>
            <select asp-for="FoodPreferences" class="form-control">
                <option value="">-- Select Food Preference --</option>
                <option value="Chinese Cuisine">Chinese Cuisine</option>
                <option value="Nigerian Delicacies">Nigerian Delicacies</option>
            </select>
            <span asp-validation-for="FoodPreferences" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Health Conditions</label><br />
            <input asp-for="HealthConditions" type="radio" value="Diabetes" /> Diabetes
            <input asp-for="HealthConditions" type="radio" value="Hypertension" /> Hypertension
            <input asp-for="HealthConditions" type="radio" value="None" /> None
            <span asp-validation-for="HealthConditions" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Activity Level</label><br />
            <input asp-for="ActivityLevel" type="radio" value="Sedentary" required /> Sedentary
            <input asp-for="ActivityLevel" type="radio" value="Lightly Active" required /> Lightly Active
            <input asp-for="ActivityLevel" type="radio" value="Moderately Active" required /> Moderately Active
            <input asp-for="ActivityLevel" type="radio" value="Very Active" required /> Very Active
            <span asp-validation-for="ActivityLevel" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Occupation</label>
            <select asp-for="Occupation" class="form-control" required>
                <option value="">-- Select Occupation --</option>
                <option value="Sedentary Job">Sedentary Job</option>
                <option value="Physically Demanding Job">Physically Demanding Job</option>
            </select>
            <span asp-validation-for="Occupation" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Sleep Patterns</label>
            <select asp-for="SleepPatterns" class="form-control" required>
                <option value="">-- Select Sleep Pattern --</option>
                <option value="Less than 5 hours">Less than 5 hours</option>
                <option value="5-6 hours">5-6 hours</option>
                <option value="6-7 hours">6-7 hours</option>
                <option value="7-8 hours">7-8 hours</option>
                <option value="More than 8 hours">More than 8 hours</option>
                <option value="Irregular Sleep Pattern">Irregular Sleep Pattern</option>
            </select>
            <span asp-validation-for="SleepPatterns" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Injury / Operation History (optional)</label>
            <input asp-for="InjuryHistory" class="form-control" />
            <span asp-validation-for="InjuryHistory" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Allergies (optional)</label>
            <input asp-for="Allergies" class="form-control" />
            <span asp-validation-for="Allergies" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
</div>

<style>
    .health-data-input-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h3 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        font-size: 1em;
        padding: 10px;
        border-radius: 5px;
    }

    .btn {
        width: 100%;
        font-size: 1.1em;
        padding: 10px;
    }

    .btn-primary {
        background-color: #007BFF;
        color: #ffffff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
